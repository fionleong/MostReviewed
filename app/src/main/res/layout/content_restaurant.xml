<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_restaurant"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.naghmeh.mostreviewed.RestaurantActivity"
    tools:showIn="@layout/activity_restaurant">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_alignParentStart="true">

        <RatingBar
            android:id="@+id/restaurantRatingBar"
            style="?android:attr/ratingBarStyleIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/restaurantName"
            android:numStars="5" />

        <TextView
            android:id="@+id/restaurantMiles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="distance" />

        <TextView
            android:id="@+id/restaurantPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="39dp"
            android:text="dollar signs" />

        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="false"
            android:layout_marginTop="120dp"
            android:background="@android:color/darker_gray" />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="false"
            android:layout_marginTop="190dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/restaurantAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="141dp"
            android:text="Address of Restaurant"
            android:textSize="24sp"
            android:textStyle="normal|bold" />

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="false"
            android:layout_marginTop="330dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/restaurantName"
            android:layout_below="@+id/divider3"
            android:layout_marginTop="11dp"
            android:text="Most Recent Reviews"
            android:textSize="18sp" />

        <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="false"
            android:layout_marginTop="375dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/restaurantCuisine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/restaurantRatingBar"
            android:layout_marginTop="6dp"
            android:text="Type of cuisine" />

        <TextView
            android:id="@+id/restaurantHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/restaurantCuisine"
            android:layout_marginTop="6dp"
            android:text="Business Hours" />

        <TextView
            android:id="@+id/numReviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/hours"
            android:layout_alignBottom="@+id/hours"
            android:layout_alignParentEnd="true"
            android:text="Num of reviews" />

        <View
            android:id="@+id/divider5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="false"
            android:layout_marginTop="450dp"
            android:background="@android:color/darker_gray" />

        <RatingBar
            android:id="@+id/miniRatingBar1"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView10"
            android:layout_below="@+id/divider4"
            android:layout_marginTop="12dp"
            android:numStars="5" />

        <RatingBar
            android:id="@+id/miniRatingBar2"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/miniRatingBar1"
            android:layout_below="@+id/divider5"
            android:layout_marginTop="11dp"
            android:numStars="5" />

        <TextView
            android:id="@+id/reviewDate1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/miniRatingBar1"
            android:text="Date of review" />

        <TextView
            android:id="@+id/reviewDate2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/miniRatingBar2"
            android:text="Date of review" />

        <TextView
            android:id="@+id/restaurantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Restaurant Name"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/divider2"
            android:layout_marginTop="18dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                app:srcCompat="@drawable/mryelp" />

            <ImageView
                android:id="@+id/img2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignTop="@+id/img1"
                android:layout_weight="1"
                app:srcCompat="@drawable/mryelp" />

            <ImageView
                android:id="@+id/img3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignTop="@+id/img2"
                android:layout_toEndOf="@+id/img2"
                android:layout_weight="1"
                app:srcCompat="@drawable/mryelp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/miniRatingBar1"
            android:layout_below="@+id/reviewDate1"
            android:layout_marginTop="15dp"
            android:text="The first 30 characters of the review" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/miniRatingBar2"
            android:layout_below="@+id/miniRatingBar2"
            android:layout_marginTop="11dp"
            android:text="The first 30 characters of the review" />

    </RelativeLayout>

</RelativeLayout>
