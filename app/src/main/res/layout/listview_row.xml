<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/restaurantImg"
        android:layout_width="70dp"

        android:layout_height="70dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/mryelp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/restaurantImg"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="15dp"
        android:layout_toEndOf="@+id/restaurantImg"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/restaurantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="RestaurantName"
            android:textSize="18dp"

            />

        <RatingBar
            android:id="@+id/searchRatingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/restaurantName"
            android:layout_below="@+id/restaurantName"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:numStars="5"
            android:theme="@style/RatingBar" />

        <TextView
            android:id="@+id/restaurantAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignStart="@id/restaurantName"
            android:layout_below="@id/searchRatingBar"
            android:text="RestaurantAddress"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/numReviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/restaurantAddress"
            android:layout_alignBottom="@+id/restaurantAddress"
            android:layout_alignParentEnd="true"
            android:text="numReviews"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/dollarSign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/searchRatingBar"
            android:text="dollarSign"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/miles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignRight="@+id/restaurantName"
            android:text="miles"
            android:textSize="12sp" />

    </RelativeLayout>

</RelativeLayout>
